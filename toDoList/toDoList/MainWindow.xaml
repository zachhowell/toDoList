<Window x:Class="toDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:toDoList"
        mc:Ignorable="d"
        Title="toDoList" Height="500" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="114*"/>
        </Grid.RowDefinitions>
   
        <DataGrid Name="toDo" Grid.RowSpan="2" Margin="0,0,40,26" ColumnWidth="*">
            
        </DataGrid>
        
        <Button Name="SaveButton" Click="SaveButton_Click"  RenderTransformOrigin="0.514,0.688" Margin="10,202,-10,0" Grid.Row="1"/>
    </Grid>
</Window>
